
  <%= link_to edit_post_path(post), class: 'text-decoration-none' do %>
    <div class="card mb-3 post-card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-2">
            <% if post.header_image.present? %>
              <div class="header-img" ><%=image_tag(post.header_image)%></div>
            <% end %>
          </div>
          <div class="col-md-10">
            <% if post.published? %>
              <span class="badge badge-primary mb-3">Publicado</span>
            <% else %>
              <span class="badge badge-secondary mb-3">Borrador</span>
            <% end %>
            <h5 class="card-title mb-2 text-dark"><%= post.title %></h5>
          </div>
        </div>
      </div>
    </div>
  <% end %>
